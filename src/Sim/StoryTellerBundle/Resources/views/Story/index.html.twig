{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Story list</h1>

    <table class="records_list table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Protagonists</th>
                <th>Map</th>
                <th>Timeline</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('Story_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.protagonists|length }}</td>
                <td>{{ entity.map }}</td>
                <td>{{ entity.timeline }}</td>
                <td>
                <ul class="list-inline">
                    <li>
                        <a class="btn btn-default" href="{{ path('Story_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a class="btn btn-info" href="{{ path('Story_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list-unstyled">
        <li>
            <a class="btn btn-primary" href="{{ path('Story_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
