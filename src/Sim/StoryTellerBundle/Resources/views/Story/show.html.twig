{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Story</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Protagonists</th>
                {# <td>{{ entity.protagonists }}</td> #}
            </tr>
            <tr>
                <th>Map</th>
                <td>{{ entity.map }}</td>
            </tr>
            <tr>
                <th>Timeline</th>
                <td>{{ entity.timeline }}</td>
            </tr>
        </tbody>
    </table>
    <table class="table table-default table-striped">
        <thead>
            <th>Nom</th>
            <th>Pr√©nom</th>
            <th>Description</th>
        </thead>
        <tbody>
            {% for protagonist in entity.protagonists %}
                <tr>
                    <td>{{protagonist.firstName}}</td>
                    <td>{{protagonist.lastName}}</td>
                    <td>{{protagonist.description}}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    

    <ul class="record_actions list-inline">
        <li>
            <a class="btn btn-default" href="{{ path('Story') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a class="btn btn-warning" href="{{ path('Story_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
